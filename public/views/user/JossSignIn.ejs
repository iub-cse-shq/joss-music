      height: 300px;

    }
    .header{
      text-align: center;

      color: DarkGray;
      text-decoration-style: wavy;

      margin: auto;
      padding-bottom: 60px;
    }
    </style>
  </head>
  <body>

    <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">JOSS MUSIC</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="#">Home</a></li>

    </ul>
    <div class="navbar-div navbar-left">
      <div class="input-group">
        <input type="text" class="div-control" placeholder="Search" style="width:700px">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    </div>

  </div>
</nav>

<div class="header">

      <h1 style="text-shadow: 1px 1px #000000; color: white "><strong>Welcome to Joss Music</strong></h1>
      <h2 style="text-shadow: 1px 1px #000000; color: white "><strong>Share you MUSIC Worldwide</strong></h2>
</div>
    <div class="JD">
      <div class="div-vertical">
    <fieldset>
      <legend>Sign In</legend>
      <div class="div-group">
        <div class="col-md-8">
          <input type="email" class="div-control" id="email" placeholder="Email" style="width:250px">
        </div>
      </div>
      <br>
      <div class="div-group">
        <div class="col-md-8">
          <input type="password" class="div-control" id="password" placeholder="Password" style="width:250px">
          <div class="checkbox">
            <label>
              <input type="checkbox"> Checkbox
            </label>
          </div>
        </div>
      </div>



      <div class="div-group">
        <div class="col-lg-10 col-lg-offset-2">
          <button id="submit" class="btn btn-primary">GO</button>
          <button type="reset" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </fieldset>
  </div>
    </div>
    
    <script src="/lib/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/ejs_production.js"></script>
  <script>
     $(document).ready(function(){
     var user = <%- JSON.stringify(user) %>;
     console.log(user);
     if(user){
       window.location.replace('/home');
     }
  })
  var user = {};
    $("#email").change(function(event){
      user.email=$("#email").val();
    });
    $("#password").change(function(event){
      user.password=$("#password").val();
    });
    $("#submit").click(function(event){
      $.ajax({
        method: 'POST',
        url: "/auth/signin",
        data: user
      }).done(function(response){
        console.log(response);
        window.location.replace('/home');
        
      }).fail(function(response){
        console.log(response);
        $("#error").text("Something went wrong! Try again.");
      });
    });

</script>
  </body>
</html>
