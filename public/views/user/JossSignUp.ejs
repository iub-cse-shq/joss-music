<!DOCTYPE html5>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="./css/bootstrap.css">
    <style media="screen">
    body {
        background-image: url("./images/CoverPic2.jpg");
        background-repeat: no-repeat;
        background-size: 2200px 1080px;
        
    }
    .JD{
      
      margin: auto;
      padding: 50px;
     
      width: 400px;
      height: 300px;

    }
    .header{
      text-align: center;

      color: DarkGray;
      text-decoration-style: wavy;

      margin: auto;
      padding-bottom: 60px;
    }
    /* Full-width input fields */
input[type=text], input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
}

/* Set a style for all buttons */
button {
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
}

/* Extra styles for the cancel button */
.cancelbtn {
    padding: 14px 20px;
    background-color: #f44336;
}

/* Float cancel and signup buttons and add an equal width */
.cancelbtn,.signupbtn {
    float: left;
    width: 50%;
}

/* Add padding to container elements */
.container {
  
       background-color: black;
      
      background:rgba(255,255,255,0.5);
  
  margin: auto;
    background-color: black;
    padding: 16px;
}

/* Clear floats */
.clearfix::after {
    content: "";
    clear: both;
    display: table;
}

/* Change styles for cancel button and signup button on extra small screens */
@media screen and (max-width: 300px) {
    .cancelbtn, .signupbtn {
       width: 100%;
    }
}
    </style>
  </head>
  <body>

    <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">JOSS MUSIC</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="#">Home</a></li>

    </ul>
    <div class="navbar-form navbar-left">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search" style="width:700px">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    </div>

  </div>
</nav>

<div class="header">

      <h1 style="text-shadow: 1px 1px #000000; color: white "><strong>Welcome to Joss Music</strong></h1>
      <h2 style="text-shadow: 1px 1px #000000; color: white "><strong>Share you MUSIC Worldwide</strong></h2>
</div>
    <div class="container">
      <div class="form-vertical">
        <h2>Signup Form</h2>

<div style="border:1px solid #ccc">
  <div class="JD container">
    <label><b>Username</b></label>
    <input id="username" type="text" placeholder="Enter a Username" name="username" required>

    <label><b>Email</b></label>
    <input id="email" type="text" placeholder="Enter Email" name="email" required>

    <label><b>Password</b></label>
    <input id="password" type="password" placeholder="Enter Password" name="psw" required>

    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

    <div class="clearfix">
      <button type="button" class="cancelbtn">Cancel</button>
      <button id="submit" class="signupbtn">Sign Up</button>
    </div>
  </div>
</div>
    </div>
    </div>


  </body>
  
  
  
  
  

  
  
  
  
  
  <script src="/lib/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/ejs_production.js"></script>
  <script>
  var user = {};
    $("#email").change(function(event){
      user.email=$("#email").val();
    });
    $("#password").change(function(event){
      user.password=$("#password").val();
    });
     $("#username").change(function(event){
      user.username=$("#username").val();
    });

    $("#submit").click(function(event){
      console.log(user);
      $.ajax({
        method: 'POST',
        url: "/auth/signup",
        data: user
      }).done(function(response){
        console.log(response);
        window.location.replace('/');
      }).fail(function(response){
        console.log(response);
        $("#error").text("Something went wrong! Try again.");
      });
    });
  </script>
</html>
